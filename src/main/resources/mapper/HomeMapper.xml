<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.visa.kigen.mapper.HomeMapper">
 
    <select id="selectAll" resultType="com.visa.kigen.model.HomeModel">
        SELECT * FROM b_visa ORDER BY id DESC;
    </select>
     <select id="selectAllAZ" resultType="com.visa.kigen.model.HomeModel">
        SELECT * FROM b_visa ORDER BY id ASC;
    </select>
    <select id="selectAllDaysAZ" resultType="com.visa.kigen.model.HomeModel">
        SELECT * FROM b_visa ORDER BY visa ASC;
    </select>
    <select id="selectAllDaysZA" resultType="com.visa.kigen.model.HomeModel">
        SELECT * FROM b_visa ORDER BY visa  DESC;
    </select>
    
   
   
</mapper>